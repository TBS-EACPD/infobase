{
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "rules": {
      "indent": [
          "warn",
          2,
          {
            "SwitchCase": 1,
            "ignoredNodes": ["ConditionalExpression"],
            "flatTernaryExpressions": true
          }
      ],
      "comma-dangle": [ "warn", "always-multiline" ],
      "linebreak-style": [
          "off",
          "unix"
      ],
      "semi": [
          "off",
          "always"
      ],
      "no-unused-vars": [
        "warn",
        { "args": "none" }
      ],
      "no-extra-semi": [ "off" ],
      "react/prop-types": [ "off" ],
      "react/no-string-refs": [ "off" ],
      "react/display-name": [ "off" ],
      "react/no-find-dom-node": [ "off" ],
      "react/no-children-prop": [ "off" ]
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "globals": {
    "process": true,
    "__dirname": true,
    
    "window": true,

    "ga": true,

    "lang": true,
    "is_a11y_mode": true,
    "long_sha": true,
    "sha": true,
    "pre_public_accounts": true,
    "feature_detection": true,
    "accounting": true,
    "marked": true,
    "React": true,
    "ReactDOM": true,
    "d3": true,
    "infobase_colors": true,
    "_": true,
    "Handlebars": true,
    "Spinner": true
  }
}

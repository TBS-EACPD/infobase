{
  "plugins": ["node"],
  "extends": ["../.eslintrc.json", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalDecorators": true
    },
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "node": true
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "ignores": ["modules"] }
    ],
    "no-console": 0
  },
  "globals": {
    "jest": true,
    "afterAll": true,
    "beforeAll": true,
    "describe": true,
    "it": true,
    "expect": true,
    "process": true
  }
}

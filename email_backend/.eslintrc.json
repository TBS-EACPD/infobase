{
  "plugins": [
    "node"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
      "browser": true,
      "commonjs": true
  },
  "extends": [ "eslint:recommended", "plugin:node/recommended" ],
  "rules": {
      "node/no-unsupported-features": ["error", {"ignores": ["modules"]}],
  },
  "globals": {
    "_": true,
    "describe": true,
    "it": true,
    "expect": true,
    "process": true
  }
}

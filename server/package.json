{
  "name": "infobase-server",
  "description": "",
  "main": "src/index.js",
  "engines": {
    "node": "16"
  },
  "type": "module",
  "dependencies": {
    "@graphql-tools/schema": "^8.2.0",
    "apollo-server-express": "^3.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "d3-dsv": "^1.1.1",
    "dataloader": "^1.4.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-depth-limit": "^1.1.0",
    "lodash": "^4.17.21",
    "lz-string": "^1.4.4",
    "md5": "^2.2.1",
    "mongoose": "^6.0.0"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "jest": "^27.3.1",
    "jest-cli": "^27.3.1",
    "kill-port": "^1.5.2",
    "nodemon": "^2.0.6"
  },
  "scripts": {
    "presnapshot_tests": "(export USE_TEST_DATA=1 && node src/populate_db.js)",
    "snapshot_tests": "(export USE_TEST_DATA=1 && NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage --forceExit --config jest_configs/snapshot_tests.config.js)",
    "presnapshot_tests:update": "(export USE_TEST_DATA=1 && node src/populate_db.js)",
    "snapshot_tests:update": "(export USE_TEST_DATA=1 && NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage --forceExit --config jest_configs/snapshot_tests.config.js --updateSnapshot)",
    "presnapshot_tests:debug": "(export USE_TEST_DATA=1 && node src/populate_db.js)",
    "snapshot_tests:debug": "(export USE_TEST_DATA=1 && NODE_OPTIONS='--experimental-vm-modules --inspect-brk' npx jest --runInBand --coverage --forceExit --config jest_configs/snapshot_tests.config.js)",
    "unit_tests": "NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage --forceExit --config jest_configs/unit_tests.config.js",
    "unit_tests:watch": "NODE_OPTIONS='--experimental-vm-modules' npx jest --watch --config jest_configs/unit_tests.config.js",
    "unit_tests:debug": "NODE_OPTIONS='--experimental-vm-modules --inspect-brk' npx jest --runInBand --coverage --forceExit --config jest_configs/unit_tests.config.js",
    "test": "(npm run unit_tests && npm run snapshot_tests)",
    "start:debug": "nodemon --watch src --watch package-lock.json --exec node --inspect-brk ./src/dev_server.js",
    "populate_db": "node src/populate_db.js",
    "populate_db:debug": "node --inspect-brk src/populate_db.js",
    "populate_db:remote": "(export USE_REMOTE_DB=1 && node src/populate_db.js)",
    "populate_db:watch": "nodemon --watch ../data -e csv --exec node src/populate_db.js",
    "populate_db:exitcrash": "nodemon --exitcrash --watch ../data -e csv --exec node src/populate_db.js",
    "mongod": "sh ../scripts/dev_scripts/local_mongod.sh -p 27017",
    "update_outage_info": "gsutil cp ./outage_msg.json gs://ib-outage-bucket/"
  },
  "authors": [
    "Alex Cousineau-Leduc",
    "Stephen O'Neil"
  ],
  "license": "MIT"
}
